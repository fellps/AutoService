<Window x:Class="AutoService.Views.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoService"
        mc:Ignorable="d"
        Title="AutoService" Height="800" Width="800" WindowStyle="None" BorderBrush="Transparent"
        AllowsTransparency="True" WindowStartupLocation="CenterScreen" Icon="../Assets/Media/logo.png">
    <Window.Background>
        <ImageBrush ImageSource="../Assets/Media/splash_screen.png"/>
    </Window.Background>
    <Grid MouseLeftButtonDown="GridMouseLeftButtonDown">
        <Grid.Background>
            <ImageBrush/>
        </Grid.Background>
    </Grid>
</Window>
